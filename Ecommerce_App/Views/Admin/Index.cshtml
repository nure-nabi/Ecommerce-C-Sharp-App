        </div>
        <div class="col-md-4">
            <div class="card card-hover">
                <a href="" class="text-decoration-none">
                    <div class="card-body text-center text-primary">
                        <i class="fa-solid fa-layer-group fa-2x"></i>
                        <p>Add Sub Category Group 3</p>
                        <p>----------</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-4">
            <div class="card card-hover">
                <a href="~/Size/Index" class="text-decoration-none">
                    <div class="card-body text-center text-primary">
                        <i class="fa-solid fa-layer-group fa-2x"></i>
                        <p>Add Size</p>
                        <p>----------</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-hover">
                <a href="~/Color/Index" class="text-decoration-none">
                    <div class="card-body text-center text-primary">
                        <i class="fa-solid fa-layer-group fa-2x"></i>
                        <p>Add Color</p>
                        <p>----------</p>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-hover">
                <a href="~/AddProduct/Index" class="text-decoration-none">
                    <div class="card-body text-center text-primary">
                        <i class="fa-solid fa-layer-group fa-2x"></i>
                        <p>Add Product</p>
                        <p>----------</p>
                    </div>
