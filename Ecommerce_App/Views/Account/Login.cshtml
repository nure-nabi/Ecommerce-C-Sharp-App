


@{
    ViewBag.Title = "Login";
}
@model DAL.Account.Account
<div class="container mt-2">
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <div class="card text-center card-shadow">
                <div class="card-header">
                    <h3>Login</h3>
                </div>
                <p class="text-danger"> @(ViewBag.Message != null ? ViewBag.Message : "")</p>
                <div class="card-body">

                    <form action="~/Account/checkLogin" method="post">
                        <div class="form-group mb-4 text-center">
                            <input type="text" class="form-control d-inline-block" id="txtUserName" name="txtUserName" placeholder="Enter UserName">
                        </div>
                        <div class="form-group mb-4 text-center">
                            <input class="form-control d-inline-block " type="password" autocomplete="off" id="txtPassword" placeholder="Password" name="txtPassword" required maxlength="32" minlength="5">
                        </div>
                        <button type="submit" class="btn btn-primary col-md-12 mt-3">Login</button>

                        <div class="card-footer text-center mt-3">
                            <p>
                                <a href="" class="text-decoration-none text-primary" >Forget Password</a><br>
                                Don't have an account ? <a class="text-decoration-none text-primary">Create one</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

