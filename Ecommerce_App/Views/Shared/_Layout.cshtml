<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
   
    <link rel="stylesheet" href="~/css/style.css"/>
    <style>
        body {
            padding: 0px;
            margin:0px
        }
        .nav-items li {
            font-size: 1.1rem;
            transition: color 0.2s ease;
        }
        a {
            color:white
        }
        .nav-item a:hover {
            color: red
        }
    </style>
</head>
<body>

    <div class="container-fluid bg-primary align-content-center ">
        <div class="row align-content-center">
            <div class="col-md-2  align-content-center mt-2">
                

            </div>
            <div class="col-md-8  align-content-center mt-2">
                <ul class="list-inline nav-items text-center">
                    <li class="list-inline-item"><a href="~/Home/Index" class="text-decoration-none">HOME</a></li>
                    <li class="list-inline-item"><a href="~/Home/Index" class="text-decoration-none">NEW ARRIVAL</a></li>
                    <li class="list-inline-item"><a href="~/Product/Index" class="text-decoration-none">EXPLORE</a></li>
                    <li class="list-inline-item"><a href="~/Product/Index" class="text-decoration-none">WHAT'S NEW?</a></li>
                    <li class="list-inline-item"><a href="~/Account/login" class="text-decoration-none">LOGIN</a></li>
                    <li class="list-inline-item"><a href="~/Account/Register" class="text-decoration-none">SING UP</a></li>
                </ul>

            </div>
            <div class="col-md-2 text-start mt-2 fs-10 fs-4 text-light" id="ecomNav-iconss">
                <span class="cart-count" style="margin-right:20px">10</span>
                <i class="fa-solid fa-cart-shopping "></i>

            </div>
        </div>
    </div>
    <div class="container-fluid bg-primary pb-3">
        <div class="row">
            <div class="col-md-2 text-start ">
                <img src="~/images/header.png" style="width:150px; "/>
            </div>
            <div class="col-md-8">
                <div class="input-group">
                    <input type="text" class="form-control" name="search" />
                    <button class="btn btn-light border-left"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
                </div>
            </div>
            <div class="col-md-2">

            </div>
        </div>
    </div>
   
    <div class="container-fluid">
       
        @RenderBody()
      
        <div class="container-fluid bg-dark">
            <div class="container " style="padding:40px 0px">
                <div class="row">
                    <div class="col-md-3">
                        <p class="text-primary">Contact Us</p>
                        <p class="text-light">
                            <i class="fa-solid fa-house"></i>  Teku, Kathmandu, Nepal<br />
                            <i class="fa-solid fa-house"></i>  01-5329949 / 01-5329952<br />
                            <i class="fa-solid fa-house"></i>  info@omsok.com
                        </p>

                    </div>
                    <div class="col-md-2">
                        <p class="text-primary">Information</p>
                        <p class="text-light">
                            Cart
                        </p>

                    </div>
                    <div class="col-md-3">
                        <p class="text-primary">Our Company</p>
                        <p class="text-light">
                            About us<br />
                            Contact Us<br />
                            Privacy Policy<br />
                            Terms of Conditions
                        </p>

                    </div>
                    <div class="col-md-4">
                        <p class="text-primary">Join our Newsletter</p>
                        
                        <div class="row">

                            <div class="form-group text-light">
                                <input type="radio" id="male" name="gender" value="male">
                                <label for="male" class="text-light">Male</label>
                                <input type="radio" id="female" name="gender" value="female">
                                <label for="female">Female</label>
                            </div>
                            <div class="input-group mt-3">
                                <input type="text" class="form-control"  name="subcribe"/>
                                <button class="btn btn-primary">SUBCRIBE</button>
                            </div>
                            <p class="text-light mt-3">Subscribe to the mailing list to receive updates on promotions, new arrivals, discount and coupons.</p>
                        </div>

                    </div>
                </div>
                <p class="text-light text-center">
                    <spna>Copyright © 2025</spna> <a class="text-decoration-none text-primary">OMSOK - Online Shopping</a> <span>All Right Reserved</span>
                </p>
            </div>
        </div>
        @*<footer style="text-align:center;background-color:#211010">

               <div class="row">
                   <div class="col-md-3">

                   </div>
               </div>

            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>
